<Window x:Class="WPFAgenda.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFAgenda"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="657" ResizeMode="CanMinimize">
    <Grid>
        <Label Content="Phone" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBoxPhone" HorizontalAlignment="Left" Margin="10,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="625"/>
        <Label Content="Name" HorizontalAlignment="Left" Margin="10,75,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBoxName" HorizontalAlignment="Left" Margin="10,106,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="625"/>
        <Label Content="Email" HorizontalAlignment="Left" Margin="9,139,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBoxEmail" HorizontalAlignment="Left" Margin="9,170,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="626"/>
        <Button x:Name="buttonInsert" Content="Insert" HorizontalAlignment="Left" Margin="10,217,0,0" VerticalAlignment="Top" Height="45" Width="99" Click="buttonInsert_Click"/>
        <Button x:Name="buttonUpdate" Content="Update" HorizontalAlignment="Left" Margin="131,217,0,0" VerticalAlignment="Top" Height="45" Width="108"/>
        <Button x:Name="buttonRemove" Content="Remove" HorizontalAlignment="Center" Margin="0,217,0,0" VerticalAlignment="Top" Height="45" Width="113" RenderTransformOrigin="0.441,0.932"/>
        <Button x:Name="buttonFind" Content="Find" HorizontalAlignment="Left" Margin="412,217,0,0" VerticalAlignment="Top" Height="45" Width="90"/>
        <Label Content="Contact List" HorizontalAlignment="Left" Margin="10,292,0,0" VerticalAlignment="Top"/>
        <Button x:Name="buttonSave" Content="Save" HorizontalAlignment="Left" Margin="528,217,0,0" VerticalAlignment="Top" Height="45" Width="107" Click="buttonSave_Click"/>
        <DataGrid Margin="10,323,22,10"/>

    </Grid>
</Window>
